{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "paths": {
    "assets/*": ["assets/*"],
    "components/*": ["components/*"],
    "constants/*": ["constants/*"],
    "pages/*": ["pages/*"],
    "services/*": ["services/*"],
    "utils/*": ["utils/*"],
  },
  "include": [
    "src"
  ]
}
